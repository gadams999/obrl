# SimRacer Scraper Configuration

# Target pages to scrape (relative URLs)
target_pages:
  # Example league page
  # - /league/the-obrl-presented-by-vctrylnsprts

  # Add specific pages here as you identify them
  # - /league/your-league-name
  # - /standings/your-league-id
  # - /schedule/your-league-id

# Scraping behavior
scraping:
  # Delay between requests (seconds) - be respectful
  request_delay: 2.0

  # Maximum retries for failed requests
  max_retries: 3

  # Timeout for requests (seconds)
  timeout: 10

  # User agent string
  user_agent: "SimRacerScraper/1.0 (Educational/Personal Use)"

# Output settings
output:
  # Output directory for scraped data
  output_dir: "./data"

  # Output format: json, csv, or both
  format: "json"

  # Pretty print JSON
  json_indent: 2

# Logging
logging:
  level: "INFO"  # DEBUG, INFO, WARNING, ERROR
  file: "./scraper.log"
