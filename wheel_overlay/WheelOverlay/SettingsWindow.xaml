<Window x:Class="WheelOverlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wheel Overlay Settings" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Display Layout -->
                <TextBlock Text="Display Layout" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="LayoutComboBox" Margin="0,0,0,15">
                    <ComboBoxItem Content="Single Text" Tag="Single"/>
                    <ComboBoxItem Content="Vertical List" Tag="Vertical"/>
                    <ComboBoxItem Content="Horizontal List" Tag="Horizontal"/>
                    <ComboBoxItem Content="Grid" Tag="Grid"/>
                </ComboBox>

                <!-- Font Size -->
                <TextBlock Text="Font Size" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Slider x:Name="FontSizeSlider" Minimum="20" Maximum="100" Width="200" TickFrequency="10" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding ElementName=FontSizeSlider, Path=Value}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Selected Text Color -->
                <TextBlock Text="Selected Text Color" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="SelectedColorTextBox" Margin="0,0,0,15"/>

                <!-- Non-Selected Text Color -->
                <TextBlock Text="Non-Selected Text Color" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="NonSelectedColorTextBox" Margin="0,0,0,15"/>

                <!-- Item Spacing -->
                <TextBlock Text="Item Spacing" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Slider x:Name="SpacingSlider" Minimum="0" Maximum="50" Width="200" TickFrequency="5" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding ElementName=SpacingSlider, Path=Value}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Move Overlay Opacity -->
                <TextBlock Text="Move Overlay Opacity (%)" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Slider x:Name="OpacitySlider" Minimum="0" Maximum="100" Width="200" TickFrequency="10" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="75" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
