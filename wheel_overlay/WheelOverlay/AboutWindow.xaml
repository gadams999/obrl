<Window x:Class="WheelOverlay.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Wheel Overlay"
        Width="450"
        Height="450"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Background="#1E1E1E">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- App Icon -->
        <Image Grid.Row="0" 
               Source="about_icon.png" 
               Width="80" 
               Height="80" 
               Margin="0,0,0,15"
               HorizontalAlignment="Center"/>

        <!-- App Name -->
        <TextBlock Grid.Row="1" 
                   Text="Wheel Overlay" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Version -->
        <TextBlock Grid.Row="2" 
                   x:Name="VersionTextBlock"
                   Text="Version 0.0.0" 
                   FontSize="14"
                   Margin="0,0,0,15"/>

        <!-- Description -->
        <TextBlock Grid.Row="3" 
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Margin="0,0,0,15">
            <Run Text="A customizable overlay application for sim racing wheels."/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="Display text labels for different rotary encoder positions on your screen during races."/>
        </TextBlock>

        <!-- GitHub Link -->
        <TextBlock Grid.Row="4" 
                   Margin="0,0,0,10">
            <Hyperlink x:Name="GitHubHyperlink"
                       NavigateUri="https://github.com/gadams999/obrl/tree/main/wheel_overlay"
                       RequestNavigate="Hyperlink_RequestNavigate"
                       Foreground="#4A9EFF">
                GitHub Repository
            </Hyperlink>
        </TextBlock>

        <!-- Copyright -->
        <TextBlock Grid.Row="5" 
                   FontSize="12"
                   Foreground="#888888"
                   Margin="0,0,0,15">
            <Run Text="Copyright Â© 2025-2026 Gavin Adams &amp; Contributors"/>
            <LineBreak/>
            <Run Text="Licensed under MIT License"/>
        </TextBlock>

        <!-- Close Button -->
        <Button Grid.Row="6" 
                x:Name="CloseButton"
                Content="Close" 
                Width="100" 
                Height="30"
                Click="CloseButton_Click"
                HorizontalAlignment="Center"
                Background="#2D2D2D"
                Foreground="White"
                BorderBrush="#555555"
                BorderThickness="1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3D3D3D"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#4D4D4D"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
