<UserControl x:Class="WheelOverlay.Views.SingleTextLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WheelOverlay.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:OverlayViewModel}">
    <Grid>
        <TextBlock Text="{Binding DisplayMessage}"
                   FontSize="{Binding Settings.FontSize}"
                   FontFamily="{Binding Settings.FontFamily}"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="{Binding Settings.SelectedTextColor}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDeviceNotFound}" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2" Opacity="0.8"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
